<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="vertical">

    <Button android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="true"
        android:background="@drawable/ic_menu_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
    </Button>

    <Button android:id="@+id/delete_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="true"
        android:background="@drawable/ic_delete_fav"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
    </Button>

    <Button android:id="@+id/edit_btn"
        android:layout_marginTop="2dp"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:focusable="true"
        android:background="@drawable/ic_edit_fav"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/delete_btn">
    </Button>

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:text="@string/date"
        android:textSize="20dp"
        tools:context=".JaGott"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/edit_btn"
        android:layout_toRightOf="@+id/btnBack"/>

    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/btnBack">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.huerse.jagott.MainActivity$PlaceholderFragment">

            <TextView
                android:id="@+id/dateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:text="@string/date"
                tools:context=".JaGott" />

            <TextView
                android:id="@+id/verseView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/dateView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:fadingEdge="vertical"
                android:text="@string/message"
                android:textStyle="bold"
                tools:context=".JaGott" />

            <ImageView
                android:id="@+id/verseImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/verseView"
                android:src="@drawable/ic_empty" />

            <TextView
                android:id="@+id/messageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/verseImage"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:fadingEdge="vertical"
                android:text="@string/date"
                tools:context=".JaGott" />

            <TextView
                android:id="@+id/noteLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/messageView"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:fadingEdge="vertical"
                android:text="Notiz:"
                android:textStyle="bold"
                tools:context=".JaGott" />

            <TextView
                android:id="@+id/noteView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/noteLabel"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:fadingEdge="vertical"
                android:text="@string/date"
                android:typeface="serif"
                android:textStyle="italic"
                tools:context=".JaGott" />

            <TextView
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/noteLabel"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:fadingEdge="vertical"
            android:text="\n\n\n\n\n\n\n\n\n\n\n\n"
            tools:context=".JaGott" />

    </RelativeLayout>
</ScrollView>

    <Button android:id="@+id/btnSmaller"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="true"
        android:background="@drawable/btn_minus_default"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">
    </Button>

    <Button android:id="@+id/btnBigger"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="true"
        android:background="@drawable/btn_plus_default"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnSmaller">
    </Button>

</RelativeLayout>