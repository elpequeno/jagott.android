<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/gestures" >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.huerse.jagott.MainActivity$PlaceholderFragment">



            <TextView
                android:id="@+id/headerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:text="Entschuldigung!"
                tools:context=".JaGott" />

            <TextView
                android:id="@+id/informationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/headerView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:fadingEdge="vertical"
                android:text="Zur Zeit ist das Archiv nur über unsere Seite zu erreichen. Wir versuchen es so schnell wie möglich in die App mit aufzunehmen. Bitte habt noch etwas Geduld."
                android:textStyle="bold"
                tools:context=".JaGott" />

            <TextView
                android:id="@+id/linkView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/informationView"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:fadingEdge="vertical"
                android:textColorLink="@color/orange_light"
                android:text="Hier gehts zum Archiv!"
                tools:context=".JaGott" />

    </RelativeLayout>
</ScrollView>