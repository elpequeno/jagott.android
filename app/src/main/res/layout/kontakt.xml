<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.huerse.jagott.MainActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="  Habt ihr Fragen oder Anregungen?\n" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title">

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="false"
            android:clickable="false">

            <RelativeLayout
                android:id="@+id/layoutMichael"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border"
                android:layout_margin="5dip">

                <ImageView
                    android:id="@+id/imageMichael"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_michael" />

                <TextView
                    android:id="@+id/nameMichael"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageMichael"
                    android:text="Michael Bayer"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/michaelNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/nameMichael"
                    android:textSize="0dp"
                    android:text="" />

                <TextView
                    android:id="@+id/mailMichael"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/michaelNumber"
                    android:textColorLink="@color/orange_light"
                    android:text="michael@ja-gott.de\n\n" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutLena"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border"
                android:layout_below="@+id/layoutMichael"
                android:layout_margin="5dip">

                <ImageView
                    android:id="@+id/imageLena"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_lena" />

                <TextView
                    android:id="@+id/nameLena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageLena"
                    android:text="Lena Vach"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/mailLena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/nameLena"
                    android:textColorLink="@color/orange_light"
                    android:text="lena@ja-gott.de\n\n" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutCarina"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border"
                android:layout_below="@+id/layoutLena"
                android:layout_margin="5dip">

                <ImageView
                    android:id="@+id/imageCarina"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_carina" />

                <TextView
                    android:id="@+id/nameCarina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageCarina"
                    android:text="Carina Knoll"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/mailCarina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/nameCarina"
                    android:textColorLink="@color/orange_light"
                    android:text="carina@ja-gott.de" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutMartin"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border"
                android:layout_below="@+id/layoutCarina"
                android:layout_margin="5dip">

                <ImageView
                    android:id="@+id/imageMartin"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/nameMartin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageMartin"
                    android:text="Martin Forell"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/mailMartin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/nameMartin"
                    android:textColorLink="@color/orange_light"
                    android:text="martin@ja-gott.de" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutAndre"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/layoutMartin"
                android:background="@drawable/border"
                android:layout_margin="5dip">

                <ImageView
                    android:id="@+id/imageAndre"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/andre" />

                <TextView
                    android:id="@+id/nameAndre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageAndre"
                    android:text="AndrÃ© Klein"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/mailAndre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/nameAndre"
                    android:textColorLink="@color/orange_light"
                    android:text="andre@ja-gott.de"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutKerstin"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="false"
                android:layout_centerHorizontal="true"
                android:background="@drawable/border"
                android:layout_below="@+id/layoutAndre"
                android:layout_margin="5dip">

                <ImageView
                    android:id="@+id/imageKerstin"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_kerstin" />

                <TextView
                    android:id="@+id/nameKerstin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageKerstin"
                    android:text="Kerstin Penner"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/mailKerstin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/nameKerstin"
                    android:textColorLink="@color/orange_light"
                    android:text="kerstin@ja-gott.de\n\n" />

            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
