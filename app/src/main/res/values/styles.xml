<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="splashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="JaGottLight" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:typeface">serif</item>
        <!-- colorPrimary is used for the default action bar background -->

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimary">@color/primary_500</item>

        <item name="colorPrimaryDark">@color/primary_700</item>

        <item name="android:windowTranslucentStatus">true</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/primary_A400</item>

        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

    <style name="HeaderTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">5</item>
    </style>
</resources>