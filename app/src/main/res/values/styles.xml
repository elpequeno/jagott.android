<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="splashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_launcher</item>
    </style>

    <style name="JaGottLight" parent="Theme.AppCompat.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimary">@color/primary_500</item>

        <item name="colorPrimaryDark">@color/primary_700</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/primary_A400</item>

        <item name="android:textColor">@color/text_primary_dark</item>
    </style>
</resources>